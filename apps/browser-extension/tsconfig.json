{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "react",
    "paths": {
      "@luke-john/prosemirror-devtools-shared-ui": [
        "../../packages/shared-ui/src/index.tsx"
      ],
      "@luke-john/prosemirror-devtools-shared-utils": [
        "../../packages/shared-utils/src/index.ts"
      ],
      "@luke-john/prosemirror-devtools-plugin/window": [
        "../../packages/prosemirror-plugin/src/window.ts"
      ],
      "@luke-john/prosemirror-devtools-plugin": [
        "../../packages/prosemirror-plugin/src/index.ts"
      ]
    }
  },
  "include": ["src"],
  "exclude": ["build", "node_modules"]
}
