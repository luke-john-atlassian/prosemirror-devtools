{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "react",
    "paths": {
      "@luke-john/prosemirror-devtools-shared-ui": ["../shared-ui/src"],
      "@luke-john/prosemirror-devtools-shared-utils": ["../shared-utils/src"],
      "@luke-john/prosemirror-devtools-plugin": ["../prosemirror-plugin/src"]
    }
  },
  "include": ["src"],
  "exclude": ["build", "node_modules"]
}
